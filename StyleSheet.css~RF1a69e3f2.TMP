body {
    margin: 0;
    padding: 0;
    background-color: #fff;
    font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

/*NavBar*/
nav#menu.navbar.navbar-static-top {
    margin-top: 0px;
    margin-bottom: 0px;
    color: #ffffff;
    background-color: #555555;
    /*text-align: right;*/
}



#menu a{
    color: #ffffff;
    text-align: right;
}

h1{
    text-align:center;
    color: #fff;
     
}

/*Section 1 Header*/
.villa_heading {
    text-align: center;
    color: white;
    position:absolute;
    width:100%;
    top:0;
    /*background-color:rgba(255, 255, 255, 0.5);*/
}

.bgLeft {
    background-image:url(images/tuscany-villas-sant-anna.jpg);
    background-size: cover;
    min-height: 300px;
}

.bgRight{  
    background-image:url(images/Versilia.jpg);
    background-size: cover;
    min-height: 300px;
}

/*Section 2 locations*/
.location1, .location3 {
    padding: 30px;
}

.location2 {
    background-color: #555555;
    padding: 30px;
}

.location1img, .location3img{
    padding:30px 30px 0px 10px;
}

.location2img {

}

.location-title {
    color: #ffffff;
    background-color: #555555;
    text-align: center;
    padding: 10px;
}

div.location2 {
    color: #ffffff;
}

.location2-text {
    color: #ffffff;
}

.button1, .button3{
    padding: 30px;
    margin: 0;
    border-radius: 0px;

}

.button2 p a.btn-primary {
    color: #333333;
    background-color:#fefefe;
    border-radius: 0px;
    border-color: none;

}

/*Section 3 Amenities*/


.transparency {
    background-color: rgba(255, 255, 255, .5);
}

.h4 {
 text-decoration-color: #ffffff;

}
.amenities-title {
    color: #ffffff;
    background-color: #555555;
    text-align: center;
    padding: 10px;
}

.amenities-grid {
    background-color: #ffffff;
    padding: 30px;
    /*background-color:rgba(255, 255, 255, 0.5);*/
}

#descriptLeft {
    text-align: center;
    vertical-align: middle;
}

.topLeftCol, .btmLeftCol {
    background-repeat: no-repeat;
    background-size: cover;
    /*background-position: center;*/
    min-height: 348px;
    background-color:rgba(255, 255, 255, 1.0);
}

#topLeftcol {
    background-image: url(images/3b-348x348.jpg);
}

#btmLeftCol {
    background-image: url(images/Villa-Rucellai-Toscani-2812-2-348x348.jpg)
}


/**/


/*Section 4 Reviews*/
.reviews-title {
    color: #ffffff;
    background-color: #555555;
    text-align: center;
    padding: 10px;
}

.glyphicon-chevron-left, .glyphicon-chevron-right {
    color: #555555;
}

.carousel-indicators li {
    display: inline-block;
    cursor: pointer;
    border: none;
    border-radius: 50%;
    background-color: #555555;
    box-shadow: inset 1px 1px 1px 1px rgba(0,0,0,0.5);
}

.carousel-indicators.active {
    background-color: #555555;
}

div.carousel-caption p.review {
    color: #555555;
    text-shadow: none; 
}

/*Section 5 Contact*/
.contact-title {
    color: #ffffff;
    background-color: #555555;
    text-align: center;
    padding: 10px;
}

div.col-md-6 {
        padding-bottom: 50px;
}

p.contact-text {
    text-align: left;
    margin:auto;
    padding: 30px 0px 0px 30px;
    text-decoration-color: #555555;
}

input#name.form-control, #email {
    margin-top: 30px;
    width:auto;
}

textarea#comment.form-control {
    margin-top: 10px;
}

/*Section 6 Footer*/
.footer-text {
    color: #ffffff;
    background-color: #555555;
    text-align: center;
    padding: 10px;
}

